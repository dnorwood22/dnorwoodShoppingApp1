@model IEnumerable<dnorwoodShoppingApp1.Models.CodeFirst.Item>
       @if (User.IsInRole("Admin"))
       {
        <button class="w3-round w3-amber">@Html.ActionLink("Create New", "Create")</button>
       } 

  <div class="row">               
                <div class="w3-container">
    @foreach (var item in Model)
    { 
        <div class="col-md-3">
            <a href="@Url.Action("Details", new { id = item.Id })"></a>
            <img src="@item.MediaURL" style="width: 100%" class="w3-hover-sepia"/>            
            <h4>@item.Name</h4>
            <p><b>@item.Price</b></p>
            @using (Html.BeginForm("Create", "CartItems", new { id = item.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div>
                    <p><button type="submit" class="w3-button w3-round w3-blue">Buy Now<i class="fa fa-shopping-cart"></i></button>
                </div>
            }


            @if (User.IsInRole("Admin"))
            {

                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>               
            }
        </div>
    }
            </div>
            </div>

